<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" /> <!-- Warna latar belakang saat tombol ditekan -->
            <stroke android:width="2dp" android:color="#ffffff" /> <!-- Warna garis outline saat tombol ditekan -->
            <corners android:radius="50dp" /> <!-- Set sudut outline -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Warna latar belakang normal -->
            <stroke android:width="2dp" android:color="#2A3568" /> <!-- Warna garis outline normal -->
            <corners android:radius="50dp" /> <!-- Set sudut outline -->
        </shape>
    </item>
</selector>
