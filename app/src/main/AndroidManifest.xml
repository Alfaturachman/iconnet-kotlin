<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Iconnet"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ui.teknisi.detail.DetailTugasActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.detail.DetailPengaduanActivity"
            android:exported="false" />
        <activity
            android:name=".ui.user.tambah.TambahPengaduanActivity"
            android:exported="false" />
        <activity
            android:name=".ui.success.SuccessActivity"
            android:exported="false" />
        <activity
            android:name=".ui.admin.master_user.edit.EditUserActivity"
            android:exported="false" />
        <activity
            android:name=".ui.admin.master_user.tambah.TambahUserActivity"
            android:exported="false" />
        <activity
            android:name=".ui.admin.tambah_tugas.TambahTugasActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.LogoutActivity"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.Iconnet.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Iconnet.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Iconnet.NoActionBar"
            android:usesCleartextTraffic="true" />
        <activity
            android:name=".ui.splash_screen.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.Iconnet.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>